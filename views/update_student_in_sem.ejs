    <h1>Update Student Data</h1>

    <table class="table">
        <tr style="color: rgb(151, 4, 156); background-color: chartreuse;">
            <th>Field</th>
            <th>Old Value</th>
        </tr>
        <tr>
            <td style="background-color: rgb(161, 228, 255);">Name</td>
            <td><%= data1.S_Name%></td>
        </tr>
        <tr>
            <td style="background-color: rgb(161, 228, 255);">Program</td>
            <td><%= data1.Program_Enrolled%></td>
        </tr>
        <tr>
            <td style="background-color: rgb(161, 228, 255);">Year Of Study</td>
            <td><%= data1.Year_Of_Study%></td>
        </tr>
        <tr>
            <td style="background-color: rgb(161, 228, 255);">Department ID</td>
            <td><%= data1.Department_ID%></td>
        </tr>
        <tr>
            <td style="background-color: rgb(161, 228, 255);">Gender</td>
            <td id="old_gender"><%= data1.Gender%></td>
        </tr>
        <tr>
            <td style="background-color: rgb(161, 228, 255);">Date of Birth</td>
            <td id="old_dob"><%= fdate%></td>
        </tr>
        <tr>
            <td style="background-color: rgb(161, 228, 255);">Email</td>
            <td id="old_dob"><%= data1.Email%></td>
        </tr>
        <tr>
            <td style="background-color: rgb(161, 228, 255);">Courses</td>
            <td>
                <% data2.forEach((item)=>{%>
                <span style="display: inline-block;"><%=item.Course_Code%></span>
                <%})%>
            </td>
        </tr>
    </table>

    <div class="container">

        <h1>New Data</h1>
        <form action="" method="POST">
            <div class="box">
                <i class="fa fa-user"></i>
                <label for="username">Name:</label>
                <input type="text" name="username" required="true" id="name" value='<%= data1.S_Name%>'>
            </div>
            <div class="box">
                <i class="fa fa-address-card"></i>
                <label for="Program">Program:</label>
                <input type="text" name="program" required="true" value='<%= data1.Program_Enrolled%>'>
            </div>
            <div class="box">
                <i class="fa fa-calendar"></i>
                <label for="year">Year Of Study:</label>
                <input type="text" name="year" required="true" id="year" value='<%= data1.Year_Of_Study%>'>
            </div>
            <div class="box">
                <i class="fa fa-key"></i>
                <label for="depid">Department ID:</label>
                <input type="number" name="depid" required="true" id="depid" value='<%= data1.Department_ID%>'>
            </div>
            <div class="box">
                <i class="fa fa-key"></i>
                <label for="depid">Email:</label>
                <input type="email" name="email" required="true" id="email" value='<%= data1.Email%>'>
            </div>
            <div class="box">
                <i class="fa fa-key"></i>
                <label for="dob">Date of Birth:</label>
                <input type="date" name="dob" required="true" id="dob" value=<%=rdate%>>
            </div>
            <div class="box">
                <i class="fa fa-key"></i>
                <input type="radio" name="gender" id="male" value="M">
                <label for="male">Male</label>
                <input type="radio" name="gender" id="femmale" value="F">
                <label for="female">Female</label>
                <input type="radio" name="gender" id="others" value=null>
                <label for="others">Others</label>
            </div>
