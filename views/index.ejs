<!doctype html>
<html>
  <head>
    <!-- Place your kit's code here -->
    <script src="https://kit.fontawesome.com/63e2b2b603.js" crossorigin="anonymous"></script>
    <title>login to educationportal</title>
    <link rel="stylesheet" href="index.ejs">
  </head>

  <body>
    <div class="logo">
      <img src="logo.png" alt="logo">
    </div>
    <div class="container">
        <h1>Login for students/teachers</h1>
        <form action="" method="POST">
        <div class="box">
          <i class="fa fa-user"></i>

          <input type="text" name="username" required= "true" id="name" placeholder="Enter Your Name">
        </div>
        <div class="box">
          
          <i class="fa fa-envelope"></i>
          <input type="email" name="email" required= "true" id="email" placeholder="Enter Your Email ID">
        </div>
        <div class="box">
          <i class="fa fa-key"></i>
          <input type="password" name="password"  required= "true" id="password"  placeholder="Enter Your Password">
          
        </div>
        <input type="submit"><button class="btn">Sign In</button>
        </form>

    </div>
  </body>
</html>