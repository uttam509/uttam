<body>

    <nav class="navbar">
        <img class="logo" src="./css/images/logo.png" alt="...">
        <h3>भारतीय प्रौद्योगिकी संस्थान इंदौर <br> Indian Institute of Technology Indore</h3>
    </nav>

    <div class="bar">
        <ul>
            <li><a href="/Admin_home">Admin Home</a></li>
            <li><a href="/admin_change_password">Change Password</a></li>
            <li><a href="/logout">Log Out</a></li>
        </ul>
    </div>

    <h1>Update Course Data</h1>

    <table class="table">
        <tr style="color: rgb(151, 4, 156); background-color: chartreuse;">
            <th>Field</th>
            <th>Old Value</th>
        </tr>
        <tr>
            <td style="background-color: rgb(161, 228, 255);">Name</td>
            <td><%= data1.Course_Name%></td>
        </tr>
        <tr>
            <td style="background-color: rgb(161, 228, 255);">Class Link</td>
            <td><%= data1.Class_Link%></td>
        </tr>
        <tr>
            <td style="background-color: rgb(161, 228, 255);">Credits</td>
            <td><%= data1.Credits%></td>
        </tr>
    </table>

    <div class="container">

        <h1>New Data</h1>
        <form action="" method="POST">
            <div class="box">
                <i class="fa fa-address-card"></i>
                <label for="name">Course Name</label>
                <input type="text" name="name" required="true" id="name" value='<%= data1.Course_Name%>'>
            </div>
            <div class="box">
                <i class="fa fa-link"></i>
                <label for="link">Class Link</label>
                <input type="text" name="link" required="true" value='<%= data1.Class_Link%>'>
            </div>
            <div class="box">
                <i class="fa fa-vcard-o"></i>
                <label for="credits">Credits</label>
                <input type="text" name="credits" required="true" id="depid" value='<%= data1.Credits%>'>
            </div>
            <div id="container">
          
                <p id="save" style="visibility: hidden;"></p>
                <%var cc = cid%>
                <input name="cid" type="text" style="display: none;" value='<%=cc.toString()%>'>
            </div>
            <a href="/admin_home" type="submit" ><button class="btn" id="btn2">Update</button></a>

        </form>

    </div>

</body>

</html>
