<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Courses</title>
    <link rel="stylesheet" href="./css/Attendance.css">
</head>
<body>
    <nav class="navbar">
        <img class="logo" src="./css/images/logo.png" alt="...">
        <h3>भारतीय प्रौद्योगिकी संस्थान इंदौर <br> Indian Institute of Technology Indore</h3>
    </nav>

    <h1>Courses</h1>
    <h2>Welcome to Online Education Portal</h2>

    <div class="container" style="display: inline-block;">
        <table class="table">
            <tr style="color: rgb(151, 4, 156); background-color: chartreuse;">
                <th>Serial No.</th>
                <th>Course Code</th>
                <th>Course Name</th>
                <th>Credits</th>
                <!-- <th>Year Of Admission</th> -->
            </tr>


            <%
            if(data.length>0){
                var i=1;
                data.forEach((inf)=>{
                    %>
                    <tr>
                        <td><%= i; %></td>
                        <td><%= inf.Course_Code %></td>
                        <td><%= inf.Course_Name %></td>
                        <td><%= inf.Credits %></td>
                        <!-- <td><%= inf.Year_Of_Study %></td> -->
                    </tr>
            <% i++;    })%>
            <% }else{ %>
                <td colspan="7">No Data Found</td>
            <% }%>
        </table>
    </div>
</body>
</html>
